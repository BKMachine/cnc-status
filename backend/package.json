{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only -r dotenv/config ./src",
    "start": "cross-env NODE_ENV=production node -r dotenv/config ./dist",
    "build": "rimraf ./dist && tsc -p ./tsconfig.build.json",
    "prettier": "prettier --write \"**/*.{js,ts,md,*rc,json}\" --ignore-path .gitignore",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "performance": "ts-node-dev --transpile-only -r dotenv/config ./src/__tests__/mqtt.messageHandler.performance.test.ts"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "http-terminator": "^3.2.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.8.1",
    "morgan": "^1.10.0",
    "mqtt": "^4.3.7",
    "socket.io": "^4.5.4",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/lodash": "^4.14.191",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "performance-now": "^2.1.0",
    "prettier": "^2.8.2",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
